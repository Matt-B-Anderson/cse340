<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% messages %>

<section class="register-form-container">
  <h2><%= title %></h2>
    <form class="register-form" action="/account/register" method="post">
  <label for="fname">First name:<span style="color: red">*</span></label>
  <input type="text" name="fname" id="fname" required>

  <label for="lname">Last name:<span style="color: red">*</span></label>
  <input type="text" name="lname" id="lname" required>

  <label for="email">Email:<span style="color: red">*</span></label>
  <input type="email" name="email" id="email" required placeholder="Enter a valid email address">

  <label for="password">Password:<span style="color: red">*</span></label>
  <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
  <input
    type="password"
    name="password"
    id="password"
    required
    minlength="12"
    pattern="(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*()_+{}\[\]:;<>,.?~\\/-]).{12,}"
  >

  <button class="register-submit" id="register-submit" type="submit">Register</button>
</form>
</section>