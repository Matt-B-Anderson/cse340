<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <% if (messages && messages.length) { %>
<div class="flash"><%= messages[0] %></div>
<% } %> <% if (errors && errors.length) { %>
<ul class="errors">
	<% errors.forEach(e => { %>
	<li><%= e.msg || e %></li>
	<% }) %>
</ul>
<% } %>

<section>
<p class="link">
  <a href="/account/update/<%= accountData?.account_id %>">
    Update Your Account Information
  </a>
</p>

<h2>Welcome <%= accountData.account_firstname %></h2>

<% if (accountData.account_type !== 'Client') { %>
  <h3>Inventory Management</h3>
  <p class="link">
    <a href="/inv/management">Go to Inventory Management</a>
  </p>
<% } %>
</section>
