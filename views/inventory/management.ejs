<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <% if (messages && messages.length) { %>
<div class="flash"><%= messages[0] %></div>
<% } %> <% if (errors && errors.length) { %>
<ul class="errors">
	<% errors.forEach(e => { %>
	<li><%= e.msg || e %></li>
	<% }) %>
</ul>
<% } %>

<section class="link-section">
	<ul class="management-links">
		<li>
			<a href="/inv/add-classification" class="btn btn-primary">
				Add New Classification
			</a>
		</li>
		<li>
			<a href="/inv/add-inventory" class="btn btn-primary">
				Add New Inventory
			</a>
		</li>
	</ul>
</section>
<section class="table-section">
	<h2>Manage Inventory</h2>
	<p>
		Please select a classification from the list to see the items belonging to
		the classification.
	</p>
	<%- classificationList %>
	<table id="inventoryDisplay"></table>
	<noscript>JavaScript must be enabled to use this page.</noscript>
</section>

<script src="../../js/inventory.js"></script>
