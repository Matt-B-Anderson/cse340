<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <% if (messages && messages.length) { %>
<div class="flash"><%= messages[0] %></div>
<% } %> <% if (errors && errors.length) { %>
<ul class="errors">
  <% errors.forEach(e => { %>
  <li><%= e.msg || e %></li>
  <% }) %>
</ul>
<% } %>

<section class="add-inventory-item-form-container">
  <form class="add-inventory-item-form" action="/inv/delete" method="post" id="deleteForm">
    <div class="odd">
      <label for="inv_make">Inventory Make:<span style="color: white">*</span></label>
      <input type="text" name="inv_make" id="inv_make" required value="<%= locals.inv_make %>" readonly/>
    </div>
    <div class="even">
      <label for="inv_model">Inventory Model:<span style="color: white">*</span></label>
      <input type="text" name="inv_model" id="inv_model" required value="<%= locals.inv_model %>" readonly/>
    </div>
    <div class="odd">
      <label for="inv_year">Inventory Year:<span style="color: white">*</span></label>
      <input type="text" name="inv_year" id="inv_year" required value="<%= locals.inv_year %>" readonly/>
    </div>
    <div class="even">
      <label for="inv_price">Inventory Price:<span style="color: white">*</span></label>
      <input type="text" name="inv_price" id="inv_price" required value="<%= locals.inv_price %>" readonly/>
      <p>Confirm Deletion - The delete is permanent.</p>
    </div>
    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%=
		locals.inv_id %>" <% } %> />
    <button class="add-inventory-item-submit" id="add-inventory-item-submit" type="submit">
      Delete Vehicle
    </button>
  </form>
</section>