<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <% if (messages && messages.length) { %>
<div class="flash"><%= messages[0] %></div>
<% } %> <% if (errors && errors.length) { %>
<ul class="errors">
	<% errors.forEach(e => { %>
	<li><%= e.msg || e %></li>
	<% }) %>
</ul>
<% } %>

<section class="add-classification-form-container">
	<h2>Add a Classification</h2>
	<form
		class="add-classification-form"
		action="/inv/add-classification"
		method="post"
	>
		<label for="classification_name"
			>Classification Name:<span style="color: white">*</span></label
		>
		<span
			>Classification name cannot contain a space or any special character</span
		>
		<input
			type="text"
			name="classification_name"
			id="classification_name"
			required
			pattern="^[A-Za-z0-9]{3,16}$"
			value="<%= locals.classification_name %>"
		/>
		<button
			class="add-classification-submit"
			id="add-classification-submit"
			type="submit"
		>
			Add Classification
		</button>
	</form>
</section>
