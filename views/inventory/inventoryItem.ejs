<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% if (messages && messages.length) { %>
  <div class="flash"><%= messages[0] %></div>
<% } %>

<% if (errors && errors.length) { %>
  <ul class="errors">
    <% errors.forEach(e => { %>
      <li><%= e.msg || e %></li>
    <% }) %>
  </ul>
<% } %>

<%- html %>